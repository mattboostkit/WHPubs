---
import Layout from '../layouts/Layout.astro';
import PageHero from '../components/PageHero.astro';
import { Button } from '@/components/ui/button';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Star, Trophy, Gift, Users, TrendingUp, Coffee, Calendar, HelpCircle, ChevronDown, ExternalLink } from 'lucide-react';
import { getLoyaltyProgramData } from '../lib/sanity';
import SanityPortableText from '@/components/SanityPortableText';

// Fetch loyalty program data
const loyaltyData = await getLoyaltyProgramData();

// Icon mapping
const iconMap = {
  signup: Users,
  earn: TrendingUp,
  redeem: Gift,
  enjoy: Coffee
};

const getCategoryIcon = (category) => {
  const icons = {
    'dining': 'üçΩÔ∏è',
    'drinks': 'üç∫',
    'events': 'üéâ',
    'special': '‚≠ê',
    'bonus': 'üéÅ',
    'food-drink': 'üç¥',
    'experiences': 'üé≠',
    'merchandise': 'üõçÔ∏è',
    'discounts': 'üí∞'
  };
  return icons[category] || 'üèÜ';
};

const title = "Rewards Program - WH Pubs";
const description = "Join WH Pubs Rewards and earn points on every visit. Enjoy exclusive benefits and special offers.";
---

<Layout title={title} description={description}>
  <PageHero
    title={loyaltyData?.title || "WH Pubs Rewards"}
    subtitle={loyaltyData?.tagline || "Earn points, enjoy rewards"}
    image={loyaltyData?.heroImage || {
      asset: { url: '/images/hero-fallback.jpg' },
      alt: 'WH Pubs Rewards Program'
    }}
  />

  <main>
    {/* Introduction Section */}
    <section class="py-16">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center">
          {loyaltyData?.description ? (
            <div class="prose prose-lg max-w-none mb-8">
              <SanityPortableText value={loyaltyData.description} />
            </div>
          ) : (
            <p class="text-lg text-muted-foreground mb-8">
              Join WH Pubs Rewards and start earning points on every visit. From your morning coffee to special celebrations, 
              every purchase brings you closer to fantastic rewards.
            </p>
          )}
          
          {loyaltyData?.signUpUrl && (
            <a href={loyaltyData.signUpUrl} target="_blank" rel="noopener noreferrer" class="inline-block">
              <Button size="lg" class="bg-primary hover:bg-primary/90">
                <Star class="w-5 h-5 mr-2" />
                {loyaltyData.signUpButtonText || 'Join Now - It\'s Free!'}
                <ExternalLink class="w-4 h-4 ml-2" />
              </Button>
            </a>
          )}
        </div>
      </div>
    </section>

    {/* How It Works */}
    {loyaltyData?.howItWorks && loyaltyData.howItWorks.length > 0 && (
      <section class="py-16 bg-muted/30">
        <div class="container mx-auto px-4">
          <h2 class="text-3xl font-bold text-center mb-12">How It Works</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-5xl mx-auto">
            {loyaltyData.howItWorks.sort((a, b) => a.stepNumber - b.stepNumber).map((step) => {
              const Icon = iconMap[step.icon] || Star;
              return (
                <div class="text-center">
                  <div class="bg-secondary/10 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <Icon class="w-10 h-10 text-secondary" />
                  </div>
                  <h3 class="text-xl font-semibold mb-2">{step.title}</h3>
                  <p class="text-muted-foreground">{step.description}</p>
                </div>
              );
            })}
          </div>
        </div>
      </section>
    )}

    {/* Membership Tiers */}
    {loyaltyData?.tiers && loyaltyData.tiers.length > 0 && (
      <section class="py-16">
        <div class="container mx-auto px-4">
          <h2 class="text-3xl font-bold text-center mb-12">Membership Tiers</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
            {loyaltyData.tiers.sort((a, b) => a.pointsRequired - b.pointsRequired).map((tier) => (
              <Card class="relative overflow-hidden hover:shadow-lg transition-shadow">
                <div 
                  class="absolute top-0 left-0 right-0 h-2"
                  style={`background-color: ${tier.color || '#B79C64'}`}
                ></div>
                <CardHeader>
                  <div class="flex items-center justify-between">
                    <CardTitle class="text-xl">{tier.name}</CardTitle>
                    {tier.icon?.asset?.url && (
                      <img
                        src={tier.icon.asset.url}
                        alt={`${tier.name} tier icon`}
                        class="w-12 h-12"
                      />
                    )}
                  </div>
                  <p class="text-sm text-muted-foreground">
                    {tier.pointsRequired === 0 ? 'Starting tier' : `${tier.pointsRequired}+ points`}
                  </p>
                </CardHeader>
                <CardContent>
                  <ul class="space-y-2">
                    {tier.benefits.map((benefit) => (
                      <li class="flex items-start gap-2">
                        <Star class="w-4 h-4 text-secondary mt-0.5 flex-shrink-0" />
                        <span class="text-sm">{benefit}</span>
                      </li>
                    ))}
                  </ul>
                </CardContent>
              </Card>
            ))}
          </div>
        </div>
      </section>
    )}

    {/* Earning Points */}
    {loyaltyData?.earningRules && loyaltyData.earningRules.length > 0 && (
      <section class="py-16 bg-gradient-to-br from-primary/5 to-secondary/5">
        <div class="container mx-auto px-4">
          <h2 class="text-3xl font-bold text-center mb-12">Ways to Earn Points</h2>
          <div class="max-w-4xl mx-auto">
            <div class="grid md:grid-cols-2 gap-4">
              {loyaltyData.earningRules.map((rule) => (
                <Card class="hover:shadow-md transition-shadow">
                  <CardContent class="p-6">
                    <div class="flex items-start gap-4">
                      <div class="text-2xl">{getCategoryIcon(rule.category)}</div>
                      <div class="flex-1">
                        <h4 class="font-semibold mb-1">{rule.action}</h4>
                        <p class="text-secondary font-medium">{rule.points}</p>
                      </div>
                    </div>
                  </CardContent>
                </Card>
              ))}
            </div>
          </div>
        </div>
      </section>
    )}

    {/* Available Rewards */}
    {loyaltyData?.rewards && loyaltyData.rewards.length > 0 && (
      <section class="py-16">
        <div class="container mx-auto px-4">
          <h2 class="text-3xl font-bold text-center mb-12">Redeem Your Points</h2>
          
          {/* Featured Rewards */}
          {loyaltyData.rewards.filter(r => r.featured).length > 0 && (
            <div class="mb-12">
              <h3 class="text-xl font-semibold text-center mb-6">Featured Rewards</h3>
              <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
                {loyaltyData.rewards.filter(r => r.featured).map((reward) => (
                  <Card class="hover:shadow-lg transition-shadow border-secondary">
                    <CardHeader>
                      <div class="flex items-start justify-between">
                        <CardTitle class="text-lg">{reward.name}</CardTitle>
                        <Badge variant="secondary" class="ml-2">
                          {reward.pointsCost} pts
                        </Badge>
                      </div>
                    </CardHeader>
                    <CardContent>
                      <p class="text-sm text-muted-foreground mb-3">{reward.description}</p>
                      <div class="flex items-center justify-between">
                        <span class="text-xs text-muted-foreground">
                          {getCategoryIcon(reward.category)} {reward.category.replace('-', ' ')}
                        </span>
                        <Button size="sm" variant="outline">Redeem</Button>
                      </div>
                    </CardContent>
                  </Card>
                ))}
              </div>
            </div>
          )}
          
          {/* All Rewards by Category */}
          <div class="max-w-6xl mx-auto">
            {Object.entries(
              loyaltyData.rewards.reduce((acc, reward) => {
                const category = reward.category || 'other';
                if (!acc[category]) acc[category] = [];
                acc[category].push(reward);
                return acc;
              }, {})
            ).map(([category, categoryRewards]) => (
              <div class="mb-8">
                <h3 class="text-xl font-semibold mb-4 flex items-center gap-2">
                  <span class="text-2xl">{getCategoryIcon(category)}</span>
                  {category.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase())}
                </h3>
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
                  {categoryRewards.map((reward) => (
                    <Card class="hover:shadow-md transition-shadow">
                      <CardContent class="p-4">
                        <div class="flex items-start justify-between mb-2">
                          <h4 class="font-medium">{reward.name}</h4>
                          <Badge variant="outline" class="ml-2 text-xs">
                            {reward.pointsCost} pts
                          </Badge>
                        </div>
                        <p class="text-sm text-muted-foreground">{reward.description}</p>
                      </CardContent>
                    </Card>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>
    )}

    {/* Member Login CTA */}
    {loyaltyData?.loginUrl && (
      <section class="py-12 bg-primary text-white">
        <div class="container mx-auto px-4 text-center">
          <div class="flex items-center justify-center gap-3 mb-4">
            <Trophy class="w-8 h-8" />
            <h2 class="text-2xl font-bold">Already a Member?</h2>
          </div>
          <p class="mb-6 text-white/80">Log in to check your points balance and redeem rewards</p>
          <a href={loyaltyData.loginUrl} target="_blank" rel="noopener noreferrer">
            <Button variant="secondary" size="lg">
              Member Login
              <ExternalLink class="w-4 h-4 ml-2" />
            </Button>
          </a>
        </div>
      </section>
    )}

    {/* FAQs */}
    {loyaltyData?.faqs && loyaltyData.faqs.length > 0 && (
      <section class="py-16">
        <div class="container mx-auto px-4">
          <h2 class="text-3xl font-bold text-center mb-12">Frequently Asked Questions</h2>
          <div class="max-w-3xl mx-auto space-y-4">
            {loyaltyData.faqs.map((faq, index) => (
              <details class="group">
                <summary class="flex items-center justify-between cursor-pointer p-4 bg-white rounded-lg border hover:border-secondary transition-colors">
                  <div class="flex items-start gap-3">
                    <HelpCircle class="w-5 h-5 text-secondary mt-0.5" />
                    <span class="font-medium text-left">{faq.question}</span>
                  </div>
                  <ChevronDown class="w-5 h-5 text-muted-foreground transition-transform group-open:rotate-180" />
                </summary>
                <div class="p-4 pt-2 pl-12">
                  <p class="text-muted-foreground">{faq.answer}</p>
                </div>
              </details>
            ))}
          </div>
        </div>
      </section>
    )}

    {/* Terms and Conditions */}
    {loyaltyData?.termsAndConditions && (
      <section class="py-16 bg-muted/30">
        <div class="container mx-auto px-4">
          <div class="max-w-4xl mx-auto">
            <h2 class="text-2xl font-bold mb-6 text-center">Terms & Conditions</h2>
            <Card>
              <CardContent class="p-6">
                <div class="prose prose-sm max-w-none">
                  <SanityPortableText value={loyaltyData.termsAndConditions} />
                </div>
              </CardContent>
            </Card>
          </div>
        </div>
      </section>
    )}

    {/* Final CTA */}
    <section class="py-16">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-4">Start Earning Rewards Today!</h2>
        <p class="text-lg text-muted-foreground mb-8 max-w-2xl mx-auto">
          Join thousands of members already enjoying exclusive benefits and rewards at WH Pubs.
        </p>
        {loyaltyData?.signUpUrl && (
          <a href={loyaltyData.signUpUrl} target="_blank" rel="noopener noreferrer">
            <Button size="lg" class="bg-primary hover:bg-primary/90">
              <Star class="w-5 h-5 mr-2" />
              {loyaltyData.signUpButtonText || 'Join WH Pubs Rewards'}
              <ExternalLink class="w-4 h-4 ml-2" />
            </Button>
          </a>
        )}
      </div>
    </section>
  </main>
</Layout>

<style>
  details summary::-webkit-details-marker {
    display: none;
  }
  
  details[open] summary {
    border-color: var(--secondary);
  }
</style>