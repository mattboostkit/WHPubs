---
// src/pages/book-a-table-pub.astro
// Pub-specific booking page that uses TARGET_PUB_SLUG to show the correct LiveRes widget
import Layout from '@/layouts/Layout.astro';
import PageHero from '@/components/PageHero.astro';
import { getPubBySlug } from '@/lib/sanity';
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Phone, MapPin, Clock, Calendar, Users, ChefHat, Star } from 'lucide-react';
import LiveResBookingWidget from '@/components/LiveResBookingWidget';

// Get the target pub slug from environment variable
const targetPubSlug = import.meta.env.TARGET_PUB_SLUG;

// Fetch the specific pub's data
const pub = targetPubSlug ? await getPubBySlug(targetPubSlug) : null;

if (!pub) {
  return Astro.redirect('/');
}

// Use the LiveRes site ID from Sanity, with fallback to URL extraction
let siteId = pub.liveResSiteId;
if (!siteId && pub.liveResWidgetUrl) {
  const urlParams = new URLSearchParams(pub.liveResWidgetUrl.split('?')[1]);
  siteId = urlParams.get('siteId');
}

const pageTitle = `Book a Table - ${pub.name}`;
const pageDescription = `Reserve your table at ${pub.name}, ${pub.locationName || pub.location}. Book online for instant confirmation.`;
---

<Layout title={pageTitle} description={pageDescription} pub={pub}>
  <PageHero 
    title={`Book a Table at ${pub.name}`}
    subtitle={`Reserve your perfect dining experience in ${pub.locationName || pub.location}`}
    image={pub.bookingPageHeroImage || pub.heroImage}
    fallbackImage="/images/book-table-hero.jpg"
  />
  
  <main>
    {/* Main Booking Section */}
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
          {/* Intro Text */}
          <div class="text-center mb-12">
            <p class="text-lg text-primary/70 max-w-3xl mx-auto">
              Whether you're planning a romantic dinner, family gathering, or catching up with friends, 
              we're delighted to welcome you to {pub.name}. Book your table below for instant confirmation.
            </p>
          </div>

          <div class="grid lg:grid-cols-3 gap-8">
            {/* Booking Widget Column - Takes up 2 columns */}
            <div class="lg:col-span-2">
              <Card class="overflow-hidden shadow-xl">
                <CardHeader class="bg-primary text-white">
                  <CardTitle class="text-2xl flex items-center">
                    <Calendar class="w-6 h-6 mr-3" />
                    Make Your Reservation
                  </CardTitle>
                </CardHeader>
                <CardContent class="p-0">
                  {/* Pub-specific LiveRes Booking Widget */}
                  <LiveResBookingWidget 
                    height="1000px" 
                    siteId={siteId} 
                    client:load 
                  />
                </CardContent>
              </Card>

              {/* Contact Information Card */}
              <div class="mt-8">
                <Card class="bg-gradient-to-br from-secondary/5 to-primary/5 border-secondary/20">
                  <CardContent class="p-6">
                    <h3 class="text-xl font-bold mb-4 text-primary">Prefer to Call?</h3>
                    <div class="flex items-center justify-between">
                      <div class="flex-1">
                        <p class="text-sm text-primary/70 mb-2">
                          Our friendly team is always happy to help with your booking
                        </p>
                        {pub.contactPhone && (
                          <a 
                            href={`tel:${pub.contactPhone.replace(/\s/g, '')}`}
                            class="inline-flex items-center text-secondary hover:text-secondary/80 font-semibold text-lg transition-colors group"
                          >
                            ðŸ“ž
                            {pub.contactPhone}
                          </a>
                        )}
                      </div>
                    </div>
                  </CardContent>
                </Card>
              </div>
            </div>

            {/* Information Sidebar */}
            <div class="space-y-6">
              {/* Pub Details */}
              <Card class="border-secondary/20">
                <CardHeader>
                  <CardTitle class="text-xl">{pub.name}</CardTitle>
                  {pub.locationName && (
                    <p class="text-sm text-primary/60">{pub.locationName}</p>
                  )}
                </CardHeader>
                <CardContent class="space-y-4">
                  {(pub.location || pub.addressLine1) && (
                    <div class="flex items-start">
                      <MapPin class="w-4 h-4 mr-2 text-primary/60 mt-0.5" />
                      <div class="text-sm">
                        <p>{pub.location}</p>
                        {pub.addressLine1 && <p>{pub.addressLine1}</p>}
                        {pub.postcode && <p>{pub.postcode}</p>}
                      </div>
                    </div>
                  )}
                  
                  {pub.openingHours && (
                    <div class="flex items-start">
                      <Clock class="w-4 h-4 mr-2 text-primary/60 mt-0.5" />
                      <div class="text-sm">
                        <p class="font-semibold mb-1">Opening Hours</p>
                        <p class="whitespace-pre-line text-primary/70">{pub.openingHours}</p>
                      </div>
                    </div>
                  )}
                </CardContent>
              </Card>

              {/* Booking Benefits */}
              <Card class="border-secondary/20">
                <CardHeader>
                  <CardTitle class="text-lg flex items-center">
                    <Star class="w-5 h-5 mr-2 text-secondary" />
                    Why Book Online
                  </CardTitle>
                </CardHeader>
                <CardContent class="space-y-3">
                  <div class="flex items-start">
                    <span class="text-secondary mr-2">âœ“</span>
                    <p class="text-sm">Instant confirmation of your booking</p>
                  </div>
                  <div class="flex items-start">
                    <span class="text-secondary mr-2">âœ“</span>
                    <p class="text-sm">Easily modify or cancel online</p>
                  </div>
                  <div class="flex items-start">
                    <span class="text-secondary mr-2">âœ“</span>
                    <p class="text-sm">Special dietary requirements catered for</p>
                  </div>
                  <div class="flex items-start">
                    <span class="text-secondary mr-2">âœ“</span>
                    <p class="text-sm">Priority seating for online bookings</p>
                  </div>
                </CardContent>
              </Card>

              {/* Group Bookings */}
              <Card class="bg-secondary/10 border-secondary/20">
                <CardHeader>
                  <CardTitle class="text-lg flex items-center">
                    <Users class="w-5 h-5 mr-2" />
                    Large Groups & Events
                  </CardTitle>
                </CardHeader>
                <CardContent>
                  <p class="text-sm text-primary/80 mb-3">
                    Planning a special celebration? We can accommodate:
                  </p>
                  <ul class="space-y-1 text-sm">
                    <li>â€¢ Birthday parties</li>
                    <li>â€¢ Wedding receptions</li>
                    <li>â€¢ Corporate functions</li>
                    <li>â€¢ Christmas parties</li>
                  </ul>
                  <p class="text-sm text-primary/80 mt-3">
                    For groups of 8+ please call us directly.
                  </p>
                </CardContent>
              </Card>

              {/* Food Service Times */}
              {pub.foodServingTimes && (
                <Card>
                  <CardHeader>
                    <CardTitle class="text-lg flex items-center">
                      <ChefHat class="w-5 h-5 mr-2" />
                      Food Service Times
                    </CardTitle>
                  </CardHeader>
                  <CardContent>
                    <div class="text-sm space-y-1">
                      {pub.foodServingTimes.split('\n').map((line) => (
                        <p class="flex justify-between">
                          <span>{line}</span>
                        </p>
                      ))}
                    </div>
                  </CardContent>
                </Card>
              )}

              {/* Booking Policy */}
              <Card class="border-primary/20">
                <CardHeader>
                  <CardTitle class="text-lg">Booking Policy</CardTitle>
                </CardHeader>
                <CardContent class="space-y-2 text-sm text-primary/70">
                  <p>â€¢ Tables are held for 15 minutes past booking time</p>
                  <p>â€¢ Cancellations can be made up to 2 hours before</p>
                  <p>â€¢ We're family and dog-friendly</p>
                </CardContent>
              </Card>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>