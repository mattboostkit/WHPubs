---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card"
import MenuTabs from '../components/MenuTabs';
import { Badge } from "@/components/ui/badge"
---

<Layout title="Sample Menu - WH Pubs">
  <main class="pt-24">
    <PageHeader 
      title="Sample Menu"
      subtitle="Traditional British cuisine with a modern twist"
      image={{
        src: "https://images.unsplash.com/photo-1550966871-3ed3cdb5ed0c?q=80&w=2070&auto=format&fit=crop",
        alt: "Beautifully plated dishes showcasing our culinary expertise"
      }}
    />

    <section class="py-16">
      <div class="container mx-auto px-4">
        <MenuTabs client:load />

        <div class="mt-12 text-center max-w-2xl mx-auto">
          <p class="text-muted-foreground mb-4">
            All dishes are freshly prepared to order. Please inform us of any allergies or dietary requirements.
            A discretionary 10% service charge will be added to parties of 6 or more.
          </p>
        </div>
      </div>
    </section>
  </main>
</Layout>