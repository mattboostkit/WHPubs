---
import Layout from '@/layouts/Layout.astro';
import PubSuppliers from '@/components/PubSuppliers';
import { getPubBySlug } from '@/lib/sanity';

const targetPubSlug = import.meta.env.TARGET_PUB_SLUG;
const targetPub = targetPubSlug ? await getPubBySlug(targetPubSlug) : null;
const pageTitle = targetPub ? `Our Suppliers | ${targetPub.name}` : 'Our Suppliers - WH Pubs';
const pageDescription = targetPub 
  ? `Discover the quality suppliers and local producers that help ${targetPub.name} deliver exceptional food and drink.` 
  : 'Meet the passionate producers and artisan suppliers behind the exceptional quality at WH Pubs. From Kent\'s finest farms to award-winning specialty producers across Britain.';

// Create structured data for the suppliers page
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": targetPub ? `${targetPub.name} Suppliers` : "WH Pubs Suppliers",
  "description": pageDescription,
  "url": targetPub ? `${targetPub.externalDomain}/suppliers` : "https://whpubs.com/suppliers",
  "mainEntity": {
    "@type": "ItemList",
    "name": "Trusted Food Suppliers",
    "description": "Our network of quality suppliers and producers"
  }
};
