---
import Layout from '@/layouts/Layout.astro';
import PubSuppliers from '@/components/PubSuppliers';
import { getPubBySlug } from '@/lib/sanity';

const targetPubSlug = import.meta.env.TARGET_PUB_SLUG;
const targetPub = targetPubSlug ? await getPubBySlug(targetPubSlug) : null;
const pageTitle = targetPub ? `Our Suppliers | ${targetPub.name}` : 'Our Suppliers - WH Pubs';
const pageDescription = targetPub 
  ? `Discover the quality suppliers and local producers that help ${targetPub.name} deliver exceptional food and drink.` 
  : 'Meet the passionate producers and artisan suppliers behind the exceptional quality at WH Pubs. From Kent\'s finest farms to award-winning specialty producers across Britain.';

// Create structured data for the suppliers page
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": targetPub ? `${targetPub.name} Suppliers` : "WH Pubs Suppliers",
  "description": pageDescription,
  "url": targetPub ? `${targetPub.externalDomain}/suppliers` : "https://whpubs.com/suppliers",
  "mainEntity": {
    "@type": "ItemList",
    "name": "Trusted Food Suppliers",
    "description": "Our network of quality suppliers and producers"
  }
};
---

<Layout title={pageTitle} description={pageDescription} pub={targetPub}>
  <!-- Add structured data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  
  <main>
    {!targetPub ? (
      <!-- Hub Site: Full Suppliers Experience -->
      <>
        <!-- Hero Section -->
        <section class="relative bg-gradient-to-b from-primary to-primary/90 text-white py-20 lg:py-32">
          <div class="absolute inset-0 bg-black/20"></div>
          <div class="relative z-10 container mx-auto px-4 text-center">
            <span class="inline-block px-4 py-1 bg-secondary/20 text-secondary rounded-full text-sm font-semibold uppercase tracking-wider mb-6">
              Quality Partners
            </span>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
              The People Behind the Flavour
            </h1>
            <p class="text-xl lg:text-2xl text-white/90 max-w-4xl mx-auto mb-8 leading-relaxed">
              From Kent's rolling hills to Devon's coastal villages, we partner with Britain's finest producers. 
              Meet the passionate artisans, family farms, and award-winning suppliers who make every meal exceptional.
            </p>
            
            <!-- Quick Stats -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto mt-12">
              <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                <div class="text-3xl font-bold text-secondary mb-1">30+</div>
                <div class="text-sm text-white/80">Quality Partners</div>
              </div>
              <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                <div class="text-3xl font-bold text-secondary mb-1">250+</div>
                <div class="text-sm text-white/80">Awards Combined</div>
              </div>
              <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                <div class="text-3xl font-bold text-secondary mb-1">85%</div>
                <div class="text-sm text-white/80">Local & Sustainable</div>
              </div>
              <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
                <div class="text-3xl font-bold text-secondary mb-1">50+</div>
                <div class="text-sm text-white/80">Years Experience</div>
              </div>
            </div>
          </div>
        </section>

        <!-- Philosophy Section -->
        <section class="py-16 lg:py-20 bg-white">
          <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
              <h2 class="text-3xl lg:text-4xl font-bold text-primary mb-6">
                Our Sourcing Philosophy
              </h2>
              <p class="text-lg text-gray-700 leading-relaxed mb-8">
                At WH Pubs, we believe exceptional food begins with exceptional ingredients. That's why we've spent years 
                building relationships with suppliers who share our commitment to quality, sustainability, and craft. 
                Every partnership tells a story of passion, tradition, and unwavering standards.
              </p>
              
              <div class="grid md:grid-cols-3 gap-8 mt-12">
                <div class="text-center">
                  <h3 class="text-xl font-bold text-primary mb-3">Quality First</h3>
                  <p class="text-gray-600">
                    We never compromise on quality. Every supplier is carefully vetted and regularly reviewed 
                    to ensure they meet our exacting standards.
                  </p>
                </div>
                
                <div class="text-center">
                  <h3 class="text-xl font-bold text-primary mb-3">Local Sourcing</h3>
                  <p class="text-gray-600">
                    Where possible, we source locally to support our community, reduce food miles, 
                    and ensure the freshest possible ingredients.
                  </p>
                </div>
                
                <div class="text-center">
                  <h3 class="text-xl font-bold text-primary mb-3">Sustainable Partners</h3>
                  <p class="text-gray-600">
                    We prioritize suppliers who share our environmental values, supporting 
                    sustainable farming and ethical production practices.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Main Suppliers Section -->
        <PubSuppliers showTitle={false} client:load />
      </>
    ) : (
      <!-- Individual Pub Site: Pub-specific suppliers -->
      <>
        <!-- Hero Section -->
        <section class="relative h-[50vh] min-h-[400px] overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-primary/90 to-primary/70"></div>
          <div class="absolute inset-0 flex items-center">
            <div class="container mx-auto px-4 text-center">
              <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-white mb-4">
                Our Quality Suppliers
              </h1>
              <p class="text-white/90 text-lg md:text-xl max-w-3xl mx-auto">
                Meet the trusted producers behind the exceptional quality at {targetPub.name}.
              </p>
            </div>
          </div>
        </section>

        <!-- Pub-specific Suppliers Section -->
        <PubSuppliers 
          pubName={targetPub.name} 
          pubSlug={targetPub.slug.current} 
          showTitle={true} 
          client:load 
        />
      </>
    )}
  </main>
</Layout>
