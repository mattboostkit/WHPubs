---
import Layout from '../../layouts/Layout.astro';
import { Button } from "@/components/ui/button"
import { Music } from 'lucide-react';
---

<Layout title="Live Music Weekends - WH Pubs">
	<main class="pt-24">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto">
				<img 
					src="https://images.unsplash.com/photo-1501612780327-45045538702b?q=80&w=2070&auto=format&fit=crop"
					alt="Acoustic guitarist performing in an intimate pub setting with warm lighting"
					class="w-full h-[400px] object-cover rounded-lg mb-8"
				/>
				<div class="prose max-w-none">
					<p class="text-primary/60 text-sm">10th June 2024</p>
					<h1 class="text-4xl font-bold text-primary mb-6">Live Music Weekends</h1>
					
					<div class="flex items-center gap-4 mb-8">
						<div class="bg-primary/5 p-3 rounded-full">
							<Music class="w-6 h-6 text-primary" />
						</div>
						<div>
							<p class="font-semibold">Sarah Thompson</p>
							<p class="text-sm text-primary/60">Events Coordinator</p>
						</div>
					</div>

					<p class="text-lg mb-6">Get ready for an incredible summer of live music at WH Pubs! We're thrilled to announce our new weekend music program featuring talented local artists every Friday and Saturday night.</p>

					<h2 class="text-2xl font-bold mb-4">June Line-up</h2>
					<ul class="list-disc pl-6 mb-6">
						<li>16th-17th: The River Band (Folk/Acoustic)</li>
						<li>23rd-24th: Jack & Emma Duo (Contemporary)</li>
						<li>30th: Summer Solstice Special with The Wanderers</li>
					</ul>

					<h2 class="text-2xl font-bold mb-4">What to Expect</h2>
					<p class="mb-6">Each weekend brings a unique musical experience, from traditional folk to contemporary acoustic covers. Enjoy our special evening menu while listening to the best local talent in an intimate, welcoming atmosphere.</p>

					<div class="bg-secondary/20 p-6 rounded-lg mb-8">
						<h3 class="text-xl font-bold mb-2">Reserve Your Table</h3>
						<p class="mb-4">Book early to secure the best seats for our live music events. Special menu available on music nights.</p>
						<Button variant="default" size="lg" class="bg-primary text-white hover:bg-primary/90">Book Now</Button>
					</div>

					<a href="/blog" class="text-primary hover:text-primary/80 inline-flex items-center">
						‚Üê Back to Blog
					</a>
				</div>
			</div>
		</div>
	</main>
</Layout>