---

<Layout title="Contact - WH Pubs">
	{/* Hero Section */}
	{pageSettings ? (
		<PageHero 
			image={pageSettings.heroImage}
			title={pageSettings.heroTitle || 'Contact Us'}
			subtitle={pageSettings.heroSubtitle || 'Get in touch with us for bookings, enquiries, or feedback'}
			fallbackImage="/images/contact-hero.jpg"
		/>
	) : (
		<PageHeader 
			title="Contact Us"
			subtitle="Get in touch with us for bookings, enquiries, or feedback"
		/>
	)}
	
	<main>
		
		<section class="py-16 bg-muted/50">
			<div class="container mx-auto px-4">

			<div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
				<div>
					<h2 class="text-2xl font-bold mb-6">Get in Touch</h2>
					
					<Card className="mb-8">
						<CardHeader>
							<CardTitle>WH Pubs Head Office</CardTitle>
							<Badge className="bg-secondary text-primary">The Little Brown Jug</Badge>
						</CardHeader>
						<CardContent className="space-y-3">
							<p class="text-muted-foreground mb-3">
								For general enquiries, bookings, or feedback, please contact our head office.
							</p>
							<div class="flex items-center gap-3 text-muted-foreground">
								<MapPin class="w-5 h-5" />
								<p>High Street, Chiddingstone Causeway, Kent, TN11 8JJ</p>
							</div>
							<div class="flex items-center gap-3 text-muted-foreground">
								<Phone class="w-5 h-5" />
								<p>01892 870318</p>
							</div>
							<div class="flex items-center gap-3 text-muted-foreground">
								<Mail class="w-5 h-5" />
								<p>enquiries@whpubs.com</p>
							</div>
							<div class="flex items-center gap-3 text-muted-foreground">
								<Clock class="w-5 h-5" />
								<p>Office Hours: Monday - Friday, 9:00 - 17:00</p>
							</div>
							<div class="flex items-center gap-3 text-muted-foreground">
								<Clock class="w-5 h-5" />
								<p>Pub Hours: Mon-Fri: 12pm-11pm, Sat: 12pm-12am, Sun: 12pm-10pm</p>
							</div>
						</CardContent>
					</Card>

					<Card>
						<CardHeader>
							<CardTitle>Quick Contact Numbers</CardTitle>
						</CardHeader>
						<CardContent className="space-y-2">
							<div class="flex justify-between items-center py-2 border-b">
								<span class="font-medium">The Bull, Otford</span>
								<a href="tel:01959580585" class="text-secondary hover:text-secondary/80">01959 580585</a>
							</div>
							<div class="flex justify-between items-center py-2 border-b">
								<span class="font-medium">The Chaser Inn, Shipbourne</span>
								<a href="tel:01732810360" class="text-secondary hover:text-secondary/80">01732 810360</a>
							</div>
							<div class="flex justify-between items-center py-2 border-b">
								<span class="font-medium">The Cricketers Inn, Meopham</span>
								<a href="tel:01474812163" class="text-secondary hover:text-secondary/80">01474 812163</a>
							</div>
							<div class="flex justify-between items-center py-2 border-b">
								<span class="font-medium">The Little Brown Jug</span>
								<a href="tel:01892870318" class="text-secondary hover:text-secondary/80">01892 870318</a>
							</div>
							<div class="flex justify-between items-center py-2">
								<span class="font-medium">The Rose & Crown, Orpington</span>
								<a href="tel:01689869029" class="text-secondary hover:text-secondary/80">01689 869029</a>
							</div>
						</CardContent>
					</Card>
				</div>

				<div>
					<h2 class="text-2xl font-bold mb-6">Send us a Message</h2>
					
					<form 
						name="contact" 
						method="POST" 
						action="/thank-you"
						data-netlify="true" 
						data-netlify-honeypot="bot-field"
						class="bg-white p-6 sm:p-8 rounded-lg shadow-lg"
					>
						<input type="hidden" name="form-name" value="contact" />
						<p class="hidden">
							<label>Don't fill this out if you're human: <input name="bot-field" /></label>
						</p>
						<div class="space-y-5">
							<div>
								<label for="contact-name" class="block text-sm font-medium mb-2 text-primary/80">Name</label>
								<input
									id="contact-name"
									name="name"
									type="text"
									autocomplete="name"
									class="w-full p-4 text-base border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary bg-white transition-all"
									placeholder="Your full name"
									required
								/>
							</div>
							
							<div>
								<label for="contact-email" class="block text-sm font-medium mb-2 text-primary/80">Email</label>
								<input
									id="contact-email"
									name="email"
									type="email"
									autocomplete="email"
									inputmode="email"
									class="w-full p-4 text-base border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary bg-white transition-all"
									placeholder="your@email.com"
									required
								/>
							</div>
							
							<div>
								<label for="contact-subject" class="block text-sm font-medium mb-2 text-primary/80">Subject</label>
								<select
									id="contact-subject"
									name="subject"
									class="w-full p-4 text-base border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary bg-white transition-all appearance-none bg-[url('data:image/svg+xml;charset=UTF-8,%3csvg%20xmlns%3d%22http%3a%2f%2fwww.w3.org%2f2000%2fsvg%22%20width%3d%2212%22%20height%3d%2212%22%20viewBox%3d%220%200%2012%2012%22%3e%3ctitle%3edown-arrow%3c%2ftitle%3e%3cg%20fill%3d%22%23000000%22%3e%3cpath%20d%3d%22M10.293%2c3.293%2c6%2c7.586%2c1.707%2c3.293A1%2c1%2c0%2c0%2c0%2c.293%2c4.707l5%2c5a1%2c1%2c0%2c0%2c0%2c1.414%2c0l5-5a1%2c1%2c0%2c1%2c0-1.414-1.414Z%22%20fill%3d%22%23000000%22%3e%3c%2fpath%3e%3c%2fg%3e%3c%2fsvg%3e')] bg-[length:12px] bg-[right_1rem_center] bg-no-repeat pr-10"
									required
								>
									<option value="">Select a subject</option>
									<option value="booking">Table Booking</option>
									<option value="event">Event Enquiry</option>
									<option value="feedback">Feedback</option>
									<option value="other">Other</option>
								</select>
							</div>
							
							<div>
								<label for="contact-message" class="block text-sm font-medium mb-2 text-primary/80">Message</label>
								<textarea
									id="contact-message"
									name="message"
									class="w-full p-4 text-base border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary bg-white transition-all resize-y min-h-[120px]"
									rows="5"
									placeholder="Tell us how we can help..."
									required
								></textarea>
							</div>
							
							<Button type="submit" variant="default" size="lg" class="w-full">
								Send Message
							</Button>
						</div>
					</form>
				</div>
			</div>
			</div>
		</section>

		{/* Location Finder Section */}
		<LocationFinder client:visible />
	</main>
</Layout>