---
import Layout from '../layouts/Layout.astro';
import { Button } from '@/components/ui/button';
import { CheckCircle, ArrowLeft, Home } from 'lucide-react';
---

<Layout title="Thank You - WH Pubs" description="Thank you for contacting WH Pubs">
  <section class="min-h-screen flex items-center justify-center py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <div class="mb-8">
          <CheckCircle class="w-24 h-24 text-green-500 mx-auto" />
        </div>
        
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Thank You!</h1>
        
        <p class="text-xl text-gray-600 mb-8">
          Your message has been received. We'll get back to you as soon as possible.
        </p>
        
        <div class="space-y-4">
          <p class="text-gray-600">
            If your enquiry is urgent, please don't hesitate to call us directly at one of our pubs.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center mt-8">
            <a href="/" class="no-underline">
              <Button variant="default" className="flex items-center gap-2">
                <Home class="w-4 h-4" />
                Back to Homepage
              </Button>
            </a>
            
            <a href="/our-pubs" class="no-underline">
              <Button variant="outline" className="flex items-center gap-2">
                View Our Pubs
              </Button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>