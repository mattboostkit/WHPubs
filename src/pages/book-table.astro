---
// src/pages/book-table.astro
import Layout from '@/layouts/Layout.astro';
import PageHero from '@/components/PageHero.astro';
import { getPubs, getPageSettings } from '@/lib/sanity';
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { MapPin, Clock } from 'lucide-react';
import LiveResBookingWidget from '@/components/LiveResBookingWidget';

// This is the main hub booking page
// For individual pub sites, they have their own book-a-table pages

// Fetch all pubs for the selector
const allPubs = await getPubs();

// Sort pubs alphabetically
const sortedPubs = allPubs.sort((a, b) => a.name.localeCompare(b.name));

// Remove duplicates based on slug
const uniquePubs = sortedPubs.reduce((acc, pub) => {
  if (!acc.find(p => p.slug.current === pub.slug.current)) {
    acc.push(pub);
  }
  return acc;
}, []);

const pageTitle = "Book a Table - WH Pubs";
const pageDescription = "Reserve your table at any of our five traditional British pubs across Kent and South East London.";
---

<Layout title={pageTitle} description={pageDescription}>
  <PageHero 
    title="Book a Table"
    subtitle="Reserve your perfect dining experience at any of our pubs"
    fallbackImage="/images/book-table-hero.jpg"
  />
  
  <main>
    {/* Main Booking Section */}
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-7xl mx-auto">
          {/* Intro Text */}
          <div class="text-center mb-12">
            <p class="text-lg text-primary/70 max-w-3xl mx-auto">
              Whether you're planning a romantic dinner, family gathering, or catching up with friends, 
              secure your table at one of our welcoming pubs. Select your preferred location below to make a reservation.
            </p>
          </div>

          <div class="grid lg:grid-cols-3 gap-8">
            {/* Booking Widget Column - Takes up 2 columns */}
            <div class="lg:col-span-2">
              <Card class="overflow-hidden shadow-xl">
                <CardHeader class="bg-primary text-white">
                  <CardTitle class="text-2xl flex items-center gap-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0">
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                      <line x1="16" y1="2" x2="16" y2="6"></line>
                      <line x1="8" y1="2" x2="8" y2="6"></line>
                      <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    Make Your Reservation
                  </CardTitle>
                </CardHeader>
                <CardContent class="p-0">
                  {/* LiveRes Booking Widget */}
                  <LiveResBookingWidget height="850px" client:load />
                </CardContent>
              </Card>

              {/* Pub Selection Cards Below Widget */}
              <div class="mt-8">
                <h3 class="text-2xl font-bold mb-6 text-primary">Or Call Your Preferred Pub Directly:</h3>
                <div class="grid sm:grid-cols-2 gap-4">
                  {uniquePubs.map((pub) => (
                    <Card class="hover:shadow-lg transition-all duration-300 hover:-translate-y-1 border border-gray-200">
                      <CardContent class="p-6">
                        <div class="flex items-start justify-between gap-3">
                          <div class="flex-1">
                            <h4 class="font-semibold text-lg mb-2 text-primary">{pub.name}</h4>
                            {pub.locationName && (
                              <p class="text-sm text-gray-600 mb-4">{pub.locationName}</p>
                            )}
                            {pub.contactPhone && (
                              <a 
                                href={`tel:${pub.contactPhone.replace(/\s/g, '')}`}
                                class="inline-flex items-center gap-3 text-secondary hover:text-secondary/70 font-semibold text-base transition-colors group"
                              >
                                <span class="flex items-center justify-center w-5 h-5">
                                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0 group-hover:scale-110 transition-transform">
                                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                                  </svg>
                                </span>
                                <span class="text-base">{pub.contactPhone}</span>
                              </a>
                            )}
                          </div>
                          {pub.name === 'The Little Brown Jug' && (
                            <Badge variant="secondary" class="whitespace-nowrap">Head Office</Badge>
                          )}
                        </div>
                      </CardContent>
                    </Card>
                  ))}
                </div>
              </div>
            </div>

            {/* Information Sidebar */}
            <div class="space-y-5">
              {/* Booking Benefits */}
              <Card class="border-secondary/20">
                <CardHeader class="pb-3">
                  <CardTitle class="text-lg flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary flex-shrink-0">
                      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                    </svg>
                    Why Book With Us
                  </CardTitle>
                </CardHeader>
                <CardContent class="space-y-3">
                  <div class="flex items-start gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary mt-0.5 flex-shrink-0">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <p class="text-sm text-gray-700">Instant confirmation of your booking</p>
                  </div>
                  <div class="flex items-start gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary mt-0.5 flex-shrink-0">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <p class="text-sm text-gray-700">Easily modify or cancel online</p>
                  </div>
                  <div class="flex items-start gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary mt-0.5 flex-shrink-0">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <p class="text-sm text-gray-700">Special dietary requirements catered for</p>
                  </div>
                  <div class="flex items-start gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary mt-0.5 flex-shrink-0">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <p class="text-sm text-gray-700">Priority seating for online bookings</p>
                  </div>
                  <div class="flex items-start gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary mt-0.5 flex-shrink-0">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <p class="text-sm text-gray-700">Exclusive online booking offers</p>
                  </div>
                </CardContent>
              </Card>

              {/* Group Bookings */}
              <Card class="bg-secondary/10 border-secondary/20">
                <CardHeader class="pb-3">
                  <CardTitle class="text-lg flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0">
                      <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                      <circle cx="9" cy="7" r="4"></circle>
                      <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                      <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                    Large Groups & Events
                  </CardTitle>
                </CardHeader>
                <CardContent>
                  <p class="text-sm text-primary/80 mb-4">
                    Planning a special celebration or corporate event? We can accommodate:
                  </p>
                  <ul class="space-y-2 text-sm">
                    <li>• Birthday parties</li>
                    <li>• Wedding receptions</li>
                    <li>• Corporate functions</li>
                    <li>• Christmas parties</li>
                    <li>• Private dining rooms</li>
                  </ul>
                  <p class="text-sm text-primary/80 mt-4">
                    For groups of 8+ or private events, please call your chosen pub directly.
                  </p>
                </CardContent>
              </Card>

              {/* Dining Information */}
              <Card>
                <CardHeader class="pb-3">
                  <CardTitle class="text-lg flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="flex-shrink-0">
                      <path d="M6 13.87A4 4 0 0 1 7.41 6a5.11 5.11 0 0 1 1.05-1.54 5 5 0 0 1 7.08 0A5.11 5.11 0 0 1 16.59 6 4 4 0 0 1 18 13.87V21H6Z"></path>
                      <line x1="6" y1="17" x2="18" y2="17"></line>
                    </svg>
                    Dining Information
                  </CardTitle>
                </CardHeader>
                <CardContent class="space-y-3 text-sm">
                  <div>
                    <p class="font-semibold mb-1">Food Service Times</p>
                    <p class="text-primary/70">
                      Mon-Fri: 12pm-3pm & 6pm-9pm<br/>
                      Sat: 12pm-9:30pm<br/>
                      Sun: 12pm-8pm (Roast until 4pm)
                    </p>
                  </div>
                  <div>
                    <p class="font-semibold mb-1">Dietary Requirements</p>
                    <p class="text-primary/70">
                      We cater for all dietary needs including vegetarian, vegan, gluten-free, 
                      and other allergies. Please inform us when booking.
                    </p>
                  </div>
                  <div>
                    <p class="font-semibold mb-1">Children & Dogs</p>
                    <p class="text-primary/70">
                      All our pubs are family and dog-friendly. High chairs and children's menus available.
                    </p>
                  </div>
                </CardContent>
              </Card>

              {/* Cancellation Policy */}
              <Card class="border-primary/20">
                <CardHeader class="pb-3">
                  <CardTitle class="text-lg">Booking Policy</CardTitle>
                </CardHeader>
                <CardContent class="space-y-2 text-sm text-primary/70">
                  <p>• Tables are held for 15 minutes past booking time</p>
                  <p>• Cancellations can be made up to 2 hours before</p>
                  <p>• For same-day bookings, please call directly</p>
                  <p>• Deposits may be required for large groups</p>
                </CardContent>
              </Card>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Opening Hours Section */}
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-center mb-12">Our Pubs Are Open</h2>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {uniquePubs.map((pub) => (
              <Card class="hover:shadow-lg transition-shadow">
                <CardHeader>
                  <CardTitle class="text-lg">{pub.name}</CardTitle>
                  {pub.locationName && (
                    <p class="text-sm text-primary/60">{pub.locationName}</p>
                  )}
                </CardHeader>
                <CardContent>
                  <div class="space-y-3">
                    {pub.openingHours ? (
                      <div class="flex items-start">
                        <Clock class="w-4 h-4 mr-2 text-primary/60 mt-0.5" />
                        <p class="text-sm whitespace-pre-line">{pub.openingHours}</p>
                      </div>
                    ) : (
                      <div class="flex items-start">
                        <Clock class="w-4 h-4 mr-2 text-primary/60 mt-0.5" />
                        <div class="text-sm">
                          <p>Mon-Fri: 12pm-11pm</p>
                          <p>Sat: 12pm-12am</p>
                          <p>Sun: 12pm-10pm</p>
                        </div>
                      </div>
                    )}
                    
                    {pub.addressLine1 && (
                      <div class="flex items-start">
                        <MapPin class="w-4 h-4 mr-2 text-primary/60 mt-0.5" />
                        <div class="text-sm">
                          <p>{pub.addressLine1}</p>
                          {pub.postcode && <p>{pub.postcode}</p>}
                        </div>
                      </div>
                    )}
                  </div>
                </CardContent>
              </Card>
            ))}
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>