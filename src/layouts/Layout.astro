---
import '../styles/globals.css'
import { Menu as MenuIcon, MapPin, Clock, Phone } from 'lucide-react';
import { X } from 'lucide-react';
import AdminBadge from '@/components/AdminBadge.astro';
import SchemaOrg from '@/components/SchemaOrg.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="WH Pubs - Traditional British pubs in South East England offering quality food, drink, and hospitality." />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#050231">
		<meta name="msapplication-TileColor" content="#050231">
		<meta name="theme-color" content="#050231">
		<meta name="generator" content={Astro.generator} />
		
		<!-- Preload fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Quattrocento:wght@400;700&family=Alice&display=swap">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Quattrocento:wght@400;700&family=Alice&display=swap" media="print" onload="this.media='all'">
		<noscript>
			<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Quattrocento:wght@400;700&family=Alice&display=swap">
		</noscript>
		
		<!-- Font fallback -->
		<style>
			.font-quattrocento {
				font-family: 'Quattrocento', Georgia, 'Times New Roman', serif;
			}
			.font-alice {
				font-family: 'Alice', Georgia, 'Times New Roman', serif;
			}
		</style>
		
		<!-- OpenGraph Meta Tags -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content="WH Pubs - Traditional British pubs in South East England offering quality food, drink, and hospitality." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:image" content="/og-image.jpg" />
		
		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="WH Pubs - Traditional British pubs in South East England offering quality food, drink, and hospitality." />
		<meta name="twitter:image" content="/og-image.jpg" />
		
		<!-- Canonical Link -->
		<link rel="canonical" href={Astro.url} />
		
		<!-- Default Schema.org Organization data -->
		<SchemaOrg type="Organization" />
		
		<title>{title}</title>
	</head>
	<body class="font-alice bg-background text-foreground">
		<header class="bg-primary fixed w-full z-50">
			<AdminBadge />
			<nav class="container mx-auto px-4 py-4" aria-label="Main navigation">
				<div class="flex items-center justify-between">
					<a href="/" class="text-4xl font-bold text-white font-quattrocento" aria-label="WH Pubs Home">WH Pubs</a>
					<div class="hidden md:flex space-x-8" role="navigation">
						<a href="/#establishments" class="text-white/80 hover:text-white transition-colors" aria-label="Our Pubs">Our Pubs</a>
						<a href="/menus" class="text-white/80 hover:text-white transition-colors" aria-label="Menus">Menus</a>
						<a href="/book" class="text-white/80 hover:text-white transition-colors" aria-label="Book a Table">Book</a>
						<a href="/events" class="text-white/80 hover:text-white transition-colors" aria-label="Events">Events</a>
						<a href="/blog" class="text-white/80 hover:text-white transition-colors" aria-label="Blog">Blog</a>
						<a href="/contact" class="text-white/80 hover:text-white transition-colors" aria-label="Contact Us">Contact</a>
					</div>
					<button 
						id="menu-toggle"
						class="md:hidden text-white/80 hover:text-white"
						aria-label="Toggle menu"
						aria-expanded="false"
						aria-controls="mobile-menu"
					>
						<MenuIcon class="w-8 h-8" aria-hidden="true" />
					</button>
				</div>
			</nav>
			
			<!-- Mobile Menu -->
			<div id="mobile-menu" class="fixed inset-0 bg-primary z-50 flex flex-col p-4 hidden" role="dialog" aria-modal="true" aria-label="Mobile navigation">
				<div class="flex justify-between items-center mb-8">
					<a href="/" class="text-4xl font-bold text-white font-quattrocento" aria-label="WH Pubs Home">WH Pubs</a>
					<button id="close-menu" class="text-white/80 hover:text-white" aria-label="Close menu">
						<X class="w-8 h-8" aria-hidden="true" />
					</button>
				</div>
				<div class="flex flex-col space-y-6 text-xl" role="navigation">
					<a href="/#establishments" class="text-white/80 hover:text-white transition-colors" aria-label="Our Pubs">Our Pubs</a>
					<a href="/menus" class="text-white/80 hover:text-white transition-colors" aria-label="Menus">Menus</a>
					<a href="/book" class="text-white/80 hover:text-white transition-colors" aria-label="Book a Table">Book</a>
					<a href="/events" class="text-white/80 hover:text-white transition-colors" aria-label="Events">Events</a>
					<a href="/blog" class="text-white/80 hover:text-white transition-colors" aria-label="Blog">Blog</a>
					<a href="/contact" class="text-white/80 hover:text-white transition-colors" aria-label="Contact Us">Contact</a>
				</div>
				<div class="mt-auto pt-8 border-t border-white/20 space-y-4">
					<div class="flex items-center text-white/80">
						<MapPin class="w-5 h-5 mr-2" aria-hidden="true" />
						<span>Various locations across South East England</span>
					</div>
					<div class="flex items-center text-white/80">
						<Clock class="w-5 h-5 mr-2" aria-hidden="true" />
						<span>Mon-Sun: 11am - 11pm</span>
					</div>
					<div class="flex items-center text-white/80">
						<Phone class="w-5 h-5 mr-2" aria-hidden="true" />
						<span>+44 20 1234 5678</span>
					</div>
				</div>
			</div>
		</header>
		
		<slot />
		
		<footer class="bg-primary text-white py-12">
			<div class="container mx-auto px-4">
				<div class="grid md:grid-cols-3 gap-8">
					<div>
						<h3 class="text-2xl font-bold mb-4 font-quattrocento">WH Pubs</h3>
						<p class="text-white/80 mb-4">Traditional British pubs offering quality food, drink, and hospitality in the heart of South East England.</p>
						<div class="flex space-x-4" aria-label="Social media links">
							<a href="#" class="text-white/80 hover:text-white" aria-label="Facebook">
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
									<path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"></path>
								</svg>
							</a>
							<a href="#" class="text-white/80 hover:text-white" aria-label="Instagram">
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
									<path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd"></path>
								</svg>
							</a>
							<a href="#" class="text-white/80 hover:text-white" aria-label="Twitter">
								<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
									<path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
								</svg>
							</a>
						</div>
					</div>
					<div>
						<h3 class="text-xl font-bold mb-4 font-quattrocento">Contact Us</h3>
						<div class="space-y-3">
							<div class="flex items-center">
								<MapPin class="w-5 h-5 mr-2 text-white/80" aria-hidden="true" />
								<span class="text-white/80">Various locations across South East England</span>
							</div>
							<div class="flex items-center">
								<Clock class="w-5 h-5 mr-2 text-white/80" aria-hidden="true" />
								<span class="text-white/80">Mon-Sun: 11am - 11pm</span>
							</div>
							<div class="flex items-center">
								<Phone class="w-5 h-5 mr-2 text-white/80" aria-hidden="true" />
								<span class="text-white/80">+44 20 1234 5678</span>
							</div>
						</div>
					</div>
					<div>
						<h3 class="text-xl font-bold mb-4 font-quattrocento">Quick Links</h3>
						<ul class="space-y-2" role="navigation" aria-label="Footer navigation">
							<li><a href="/" class="text-white/80 hover:text-white" aria-label="Home">Home</a></li>
							<li><a href="/menus" class="text-white/80 hover:text-white" aria-label="Menus">Menus</a></li>
							<li><a href="/book" class="text-white/80 hover:text-white" aria-label="Book a Table">Book a Table</a></li>
							<li><a href="/events" class="text-white/80 hover:text-white" aria-label="Events">Events</a></li>
							<li><a href="/blog" class="text-white/80 hover:text-white" aria-label="Blog">Blog</a></li>
							<li><a href="/contact" class="text-white/80 hover:text-white" aria-label="Contact Us">Contact</a></li>
						</ul>
					</div>
				</div>
				<div class="border-t border-white/20 mt-8 pt-8 text-center text-white/60">
					<p>&copy; {new Date().getFullYear()} WH Pubs. All rights reserved.</p>
				</div>
			</div>
		</footer>
		
		<!-- Google Analytics -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'G-XXXXXXXXXX');
			
			// Custom event tracking helper
			window.trackEvent = function(category, action, label, value) {
				gtag('event', action, {
					'event_category': category,
					'event_label': label,
					'value': value
				});
			};
		</script>
		
		<script>
			// Mobile menu toggle
			const menuToggle = document.getElementById('menu-toggle');
			const closeMenu = document.getElementById('close-menu');
			const mobileMenu = document.getElementById('mobile-menu');
			
			menuToggle?.addEventListener('click', () => {
				mobileMenu?.classList.remove('hidden');
				document.body.style.overflow = 'hidden';
				menuToggle.setAttribute('aria-expanded', 'true');
			});
			
			closeMenu?.addEventListener('click', () => {
				mobileMenu?.classList.add('hidden');
				document.body.style.overflow = 'auto';
				menuToggle?.setAttribute('aria-expanded', 'false');
			});
			
			// Scroll to pubs section
			const scrollToPubsBtn = document.getElementById('scroll-to-pubs');
			scrollToPubsBtn?.addEventListener('click', () => {
				const pubsSection = document.getElementById('establishments');
				pubsSection?.scrollIntoView({ behavior: 'smooth' });
			});
		</script>
	</body>
</html>
